#!/bin/csh -f

#
# Program: Install
#
# Original Author: Lori Corbani
#
# Purpose: To install the EI
#
# Modification History:
#
# 06/25/2014	lec
#
# 07/11/2006	lec
#	- new
#

cd `dirname $0` && source ./Configuration

setenv LOG `pwd`/Install.log
rm -f $LOG

switch (`uname -n`)
	case bhmgiei01:
	case bheidev01:
		# create symlink from ei_linux to ei
		rm -rf ${MGI_LIVE}/ei
		ln -s ${MGI_LIVE}/ei_linux ${MGI_LIVE}/ei
		echo "building for linux..." >>& ${LOG}

		# clean all existing builds
		cleanall

		# run build for each product
		foreach app ($EIAPPS)
   			echo "INSTALLING $app" >>& ${LOG}
   			buildapp $app compiled >>& ${LOG}
		end
		breaksw
	case rohan:
		echo "building for solaris/dev..." >>& ${LOG}
		./install_solaris_dev >>& ${LOG}
	default:
		echo "building for solaris..." >>& ${LOG}
		./install_solaris >>& ${LOG}
endsw



#!/bin/csh -f

#
# Installs all EI apps as compiled applications
#
# Usage: install_solaris
#
# Output: install_solaris.log
#

source ./Configuration

setenv LOG $0.log
rm -f $LOG

foreach app ($EIAPPS)

echo "INSTALLING $app"
setenv EIAPP $app

date > ${LOG}

#
# uxb.conf is assumed...
#

cd ${EIAPP}
uxb uxb_solaris.conf clean >>& ${LOG}
rm -rf *.o *.c *.do *.ui cderes* ${EIAPP} *.log >>& ${LOG}
uxb uxb_solaris.conf -dmode compiled >>& ${LOG}
cd ..

date >> ${LOG}

end


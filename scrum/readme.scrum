grep 'dbcollen' ../dsrc/*.d >> E.txt
grep 'dbcoltype' ../dsrc/*.d >> E.txt
grep 'dbexit' ../dsrc/*.d >> E.txt
grep 'dblogin' ../dsrc/*.d >> E.txt
grep 'dbloginfree' ../dsrc/*.d >> E.txt
grep 'dbinit' ../dsrc/*.d >> E.txt
grep 'dbname' ../dsrc/*.d >> E.txt
grep 'dbnextrow' ../dsrc/*.d >> E.txt
grep 'dbopen' ../dsrc/*.d >> E.txt
grep 'dbresults' ../dsrc/*.d >> E.txt
grep 'dbsqlexec' ../dsrc/*.d >> E.txt
grep 'dbuse' ../dsrc/*.d >> E.txt
grep 'dbcancel' ../csrc/*.c >> E.txt
grep 'dbcmd' ../csrc/*.c >> E.txt
grep 'dbclose' ../csrc/*.c >> E.txt
grep 'dbcolname' ../csrc/*.c >> E.txt
grep 'dbcollen' ../csrc/*.c >> E.txt
grep 'dbcoltype' ../csrc/*.c >> E.txt
grep 'dbexit' ../csrc/*.c >> E.txt
grep 'dblogin' ../csrc/*.c >> E.txt
grep 'dbloginfree' ../csrc/*.c >> E.txt
grep 'dbinit' ../csrc/*.c >> E.txt
grep 'dbname' ../csrc/*.c >> E.txt
grep 'dbnextrow' ../csrc/*.c >> E.txt
grep 'dbopen' ../csrc/*.c >> E.txt
grep 'dbresults' ../csrc/*.c >> E.txt
grep 'dbsqlexec' ../csrc/*.c >> E.txt
grep 'dbuse' ../csrc/*.c >> E.txt
sort E.txt > E.txt.sort

#F:csrc library
rm -rf F.txt F.txt.sort
touch F.txt
grep 'mgi_dbinit' ../dsrc/*.d >> F.txt
grep 'mgi_dbopen' ../dsrc/*.d >> F.txt
grep 'mgi_dbexit' ../dsrc/*.d >> F.txt
grep 'mgi_execute_search' ../dsrc/*.d >> F.txt
